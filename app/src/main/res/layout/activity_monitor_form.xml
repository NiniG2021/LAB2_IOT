<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonitorForm"
    android:orientation="vertical"
    android:paddingVertical="30dp"
    android:paddingHorizontal="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitor"
        android:textSize="30sp"/>
    <EditText
        android:id="@+id/editActivo"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Activo"
        android:width="350dp"
        android:textSize="24sp"
        />
    <EditText
        android:id="@+id/editPCActivo"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="24sp"
        android:hint="PC Activo"/>
    <EditText
        android:id="@+id/editMarca"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:hint="Marca"/>
    <EditText
        android:id="@+id/editPulgadas"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:hint="Pulgadas"/>
    <EditText
        android:id="@+id/editAno"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:hint="AÃ±o"/>
    <EditText
        android:id="@+id/editModelo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:hint="Modelo"/>

</LinearLayout>